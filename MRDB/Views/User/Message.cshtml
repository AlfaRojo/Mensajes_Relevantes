@model Mensajes_Relevantes.Models.Message

@{
    ViewData["Title"] = "Message";
}

<p>User conneting: @ViewBag.sessionv</p>

<h1>Message</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Message">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input placeholder="Escribir" asp-for="Text" class="Write" />
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <span class="SendButton">
                <span>Select file</span>
                <input type="file" name="file">
                <input type="submit">
            </span>
        </form>
    </div>
</div>

<div>
    <a href="/User/Login">Cerrar Sesión</a>
</div>



