@model IEnumerable<Mensajes_Relevantes.Models.Message>

@{
    ViewData["Title"] = "Get_History";
}
<p>Conecting: @ViewBag.sessionv</p>

<h1>Historial</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SendDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emisor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.receptor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                if (item.Action == "Recieved")
                {
                    <tr class="d0" style="background-color:#8C4966; color:white;">
                        <td>
                            @Html.DisplayFor(modelItem => item.SendDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.emisor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.receptor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.file_Name)
                        </td>

                        @if (item.file_Name != "")
                        {
                            <td>
                                <u>
                                    @Html.ActionLink("Download", "FileDownload", "File", item)
                                </u>
                            </td>
                        }
                        else
                        {
                            <td>
                            </td>
                        }
                    </tr>
                }
                else if (item.Action == "Send")
                {
                    <tr class="d1" style="background-color:#BBA9BB; color:black;">
                        <td>
                            @Html.DisplayFor(modelItem => item.SendDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.emisor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.receptor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.file_Name)
                        </td>
                        @if (item.file_Name != "")
                        {
                            <td>
                                <u>
                                    @Html.ActionLink("Download", "FileDownload", "File", item)
                                </u>
                            </td>
                        }
                        else
                        {
                            <td>
                            </td>
                        }
                    </tr>
                }

            }
        }
    </tbody>
</table>
<div class="form-group">
    <input type="button" value="Menu" onclick="location.href='@Url.Action("Menu", "User")'" class="MessageButton" />
</div>
